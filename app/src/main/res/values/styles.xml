<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SimpleBlockDefaultStyle">
        <item name="color_stroke">@color/color_stroke_default</item>
        <item name="width">@dimen/width_default_block</item>
        <item name="height">@dimen/height_default_block</item>
        <item name="stroke_width">@dimen/stroke_width_default_block</item>
        <item name="x">@integer/x_default_block</item>
        <item name="y">@integer/y_default_block</item>
        <item name="text">@string/text_default_block</item>
        <item name="text_size">@dimen/text_size_default_block</item>
        <item name="text_color">@color/color_text_default</item>
    </style>

    <style name="SimpleLineDefault">
        <item name="color_stroke_line">@color/color_stroke_default_line</item>
        <item name="stroke_width_line">@dimen/stroke_width_default_line</item>
        <item name="width_line_selection">@dimen/width_default_line_selection</item>
    </style>

</resources>
